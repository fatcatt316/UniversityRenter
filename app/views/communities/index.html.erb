<h1>Apartment Communities  
  <span class="new_link_holder"><%= link_to 'New Community', new_community_path, :class => 'add_link' %></span>
</h1>

<table class="list_table">
  <tr>
    <th style="width: 90px;text-align: center">&nbsp;</th>
    <% unless @current_college %>
      <th>College</th>
    <% end %>
    <th>Community Name</th>
    <th>Address</th>
    <th>Ads</th>
    
    <% if @current_user && @current_user.admin? %>
      <th class="icons">&nbsp;</th>
    <% end %>
  </tr>

  <% @communities.each do |community| %>
    <tr class="<%= cycle('even', 'odd') %>">
      <td style="text-align: center"><%= show_primary_image(community) %></td>
      <% unless @current_college %>
        <td><%= community.college %></td>
      <% end %>
      <td><%= link_to community, community %></td>
      <td><%= community.address %></td>
      <td>
        <%= link_to "#{community.listings.count} Ads", 
          listings_path(:filter => {:college_id => community.college_id, :community_id => community.id}) %>
      </td>
      
      <% if @current_user && @current_user.admin? %>
        <td class="icons">
          <%= link_to '', edit_community_path(community), :class => "edit_link" %>
          <%= link_to '', community, :confirm => 'Are you sure?', :method => :delete, :class => "delete_link" %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<br />

<% if @current_user && @current_user.admin? %>
  <%= link_to 'New community', new_community_path %>
<% end %>