<table class="table table-striped table-bordered table-hover">
  <tr>
    <th style="width: 90px;text-align: center">&nbsp;</th>
    <% unless @college || current_college %>
      <th>College</th>
    <% end %>
    <th>Community Name</th>
    <th>Address</th>
    <th>Ads</th>
    <% if current_user && current_user.admin? %>
      <th></th>
    <% end %>
  </tr>

  <% communities.each do |community| %>
    <tr class="<%= cycle('even', 'odd') %>">
      <td style="text-align: center"><%= show_primary_image(community) %></td>
      <% unless @college || current_college %>
        <td><%= community.college %></td>
      <% end %>
      <td><%= link_to community, college_community_path(community.college, community) %></td>
      <td><%= community.address %></td>
      <td>
        <%= link_to "#{community.listings.count} Ads", 
          college_listings_path(community.college, filter: {community_id: community.id}) %>
      </td>
      
      <% if current_user && current_user.admin? %>
        <td>
          <%= link_to edit_icon, edit_community_path(community) %>
          <%= link_to destroy_icon, community, confirm: "Are you sure you want to delete #{community}?", method: :delete %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
