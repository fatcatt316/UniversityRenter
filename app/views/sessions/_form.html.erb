<% if current_user %>
  <%= current_user %>
  <%= link_to "Logout", logout_path, :remote => true %>
<% else %>
  <%= form_tag sessions_path do %>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], :size => 15 %>
    
    <%= label_tag :password %>
    <%= password_field_tag :password, :size => 10 %>
    
    <%= submit_tag "Log in" %>
    <br />
    No account? <%= link_to "Sign up here", signup_path %>
    <%#= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%#= label_tag :remember_me %>
  <% end %>
<% end %>