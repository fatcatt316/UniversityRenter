(function($) {
  zip_div = $('.address_form');
  <% if @postal_result.present? %>
    $('.city_field').val("<%= @postal_result[:city] %>");
    $('.city').html("<%= @postal_result[:city] %>");
    
    <% if @state.present? %>
      $('.state').html("<%= @postal_result[:state] %>");
      $('.state_id').val("<%= @state.id %>");
    <% end %>
  <% end %>
})(jQuery);