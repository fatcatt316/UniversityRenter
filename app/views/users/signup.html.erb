<h1>Sign Up!</h1>

<%= form_for @user, :url => {:controller => :users, :action => :finalize_signup}, :html => {:method => :post} do |f| %>
  <% if @user.errors.any? %>
    <div id="errorExplanation">
      <h2>Whoops, fix your mistakes!</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table class="form" style="width: 50%;">
    <tr>
      <th><%= f.label :email %></th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th><%= f.label :password %></th>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <th><%= f.label :password_confirmation %></th>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= recaptcha_tags %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "Sign me on up!" %></td>
    </tr>
  </table>
<% end %>